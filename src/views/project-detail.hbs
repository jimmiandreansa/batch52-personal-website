        <div class="info">
          <h2 class="mb-4 fs-5 text-primary-emphasis">Author:
            {{data.username}}</h2>
          <div class="duration">
            <h2 class="info-title fs-5 text-dark-emphasis">Duration</h2>
            <div class="time">
              <ion-icon class="icon" name="calendar-outline"></ion-icon>
              <p class="mb-0">{{data.start_date}} s/d {{data.end_date}}</p>
            </div>
            <div class="time">
              <ion-icon class="icon" name="timer-outline"></ion-icon>
              <p class="mb-0">{{data.duration}}</p>
            </div>
          </div>
          <div class="technologies">
            <h2 class="info-title fs-5 text-dark-emphasis">Technologies</h2>
            <div class="tech-grid">
              {{#each data.tech}}
